<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans  
        http://www.springframework.org/schema/beans/spring-beans.xsd  
        http://code.alibabatech.com/schema/dubbo  
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd  
        ">
    
    <bean id="emailService"
          class="com.februy.shop.service.email.EmailServiceImpl"/>
    <!-- 消费者应用信息，用于提供依赖关系 -->
    <dubbo:application name="email_provider"/>
    <!-- 注册地址，用于消费者寻找服务 -->
<!--    <dubbo:registry protocol="zookeeper" address="192.168.1.118:2181,192.168.1.119:2181,192.168.1.120:2181"/>-->
    <dubbo:registry protocol="zookeeper" address="47.100.213.16:2181"/>
    <dubbo:protocol name="dubbo" port="20882" serialization="java"/>
    <dubbo:service interface="com.februy.shop.service.email.EmailService" version="1.0.0"
                   ref="emailService"/>
</beans>